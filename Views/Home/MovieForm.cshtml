
@{
    ViewBag.Title = "Enter a new movie here";
}
<!--this is the form where movies can be added-->
@model JoelHiltonsMovieCollectionEdit.Models.Movies
<h1 class="text-center">@ViewBag.Title</h1>
<form asp-action="MovieForm" method="post" style="padding: 20px; " class="col-lg-6 offset-lg-3">
    <div class="form-group"  >
        <label asp-for="Category">Category: </label>
        <input class="form-control" style="width: 700px;" asp-for="Category" />
    </div>
    <div class="form-group" >
        <label asp-for="Title">Title: </label>
        <input class="form-control" style="width: 700px;" asp-for="Title" />
    </div>
    <div class="form-group"  >
        <label asp-for="Year">Year: </label>
        <input class="form-control" style="width: 700px;" asp-for="Year" />
    </div>
    <div class="form-group"  >
        <label asp-for="Director">Director: </label>
        <input class="form-control" style="width: 700px;" asp-for="Director" />
    </div>
    <div class="form-group"  >
        <label asp-for="Rating">Rating: </label>
        <select class="form-control" style="width: 700px;" asp-for="Rating">
            <option value="">Select one</option>
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>
    </div>
    <div class="form-group"  >
        <label asp-for="Edited">Edited?: </label>
        <select class="form-control" style="width: 700px;" asp-for="Edited">
            <option value="">Select one</option>
            <option value="Yes">Yes</option>
            <option value="No">No</option>
        </select>
    </div>
    <div class="form-group"  >
        <label asp-for="LentTo">Lent To: </label>
        <input class="form-control" style="width: 700px;" asp-for="LentTo" />
    </div>
    <div class="form-group">
        <label asp-for="Notes">Notes: </label>
        <input class="form-control" style="width: 700px;" asp-for="Notes" />
    </div>
    <button class="btn btn-primary" type="submit">Submit</button>
</form>